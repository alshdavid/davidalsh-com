{
  "name": "davidalsh-com",
  "scripts": {
    "build": "node --import tsx ./scripts/index.ts",
    "watch": "npx nodemon",
    "serve": "npx http-server -c=-1 ./dist"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@types/node": "*",
    "glob": "*",
    "tsx": "*",
    "ejs": "*",
    "esbuild": "*",
    "http-server": "*",
    "nodemon": "*",
    "prettier": "*",
    "marked": "*",
    "prismjs": "*",
    "@types/prismjs": "*",
    "esbuild-sass-plugin": "*",
    "mermaid": "*",
    "@mermaid-js/mermaid-cli": "*"
  },
  "nodemonConfig": {
    "ignore": ["**/node_modules/**", "**/.git/**", "**/dist/**"],
    "watch": ["src/**/*", "src/.partials/**/*", "src/.utils/**/*", "scripts/**/*"],
    "ext": "*",
    "delay": 250,
    "signal" : "SIGTERM",
    "exec": "clear && npm run build"
  }
}
